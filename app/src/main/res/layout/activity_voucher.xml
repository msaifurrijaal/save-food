<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.voucher.VoucherActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/large_150"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_ellipse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ellipse3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/normal_125" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/container_voucher"
            android:layout_marginStart="@dimen/normal_125"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/ib_back_voucher"
                android:layout_width="@dimen/normal_200"
                android:layout_height="@dimen/normal_200"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                android:background="@android:color/transparent"
                android:layout_marginEnd="@dimen/small_50"
                app:tint="@color/white"
                android:contentDescription="null"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/voucher"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:textSize="@dimen/h5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_point_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/normal_75"
            android:paddingHorizontal="@dimen/normal_100"
            android:background="@drawable/bg_rounded_white"
            android:elevation="@dimen/small_25"
            app:layout_constraintTop_toTopOf="@id/container_voucher"
            app:layout_constraintBottom_toTopOf="@id/container_voucher"
            app:layout_constraintStart_toStartOf="@id/container_voucher"
            app:layout_constraintEnd_toEndOf="@id/container_voucher" >

            <LinearLayout
                android:id="@+id/btn_user_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/large_100"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/image_40_custom"
                    android:layout_height="@dimen/image_40_custom"
                    android:src="@drawable/coin_icon"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/normal_100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Points"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_point_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        tools:text="@string/_2_731"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/black" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_top_white"
            android:orientation="vertical"
            android:padding="@dimen/normal_125"
            android:layout_marginTop="@dimen/normal_125"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_ellipse3">

            <LinearLayout
