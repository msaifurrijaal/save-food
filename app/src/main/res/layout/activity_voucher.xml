                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:background="@drawable/bg_btn_color_primary"
                                android:layout_marginTop="@dimen/small_100"
                                android:layout_gravity="end"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/normal_150"
                    android:layout_marginEnd="@dimen/small_100"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/small_25">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/large_225"
                            android:src="@drawable/voucher_gojek"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/normal_75"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/gojek"
                                android:textSize="@dimen/caption"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/colorPrimaryDarkPro" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/voucher_rp_50_000"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/subtitle_2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/small_25">

                                <ImageView
                                    android:layout_width="@dimen/normal_125"
                                    android:layout_height="@dimen/normal_125"
                                    android:src="@drawable/coin_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:text="@string/_4650"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/text_orange"
                                    android:textSize="@dimen/subtitle_2"
                                    android:layout_marginStart="@dimen/small_100"/>

                            </LinearLayout>

                            <Button
                                android:layout_width="@dimen/large_200"
                                android:layout_height="@dimen/normal_200"
                                android:text="Tukar"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:background="@drawable/bg_btn_color_primary"
                                android:layout_marginTop="@dimen/small_100"
                                android:layout_gravity="end"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/normal_100">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/normal_150"
                    android:layout_marginEnd="@dimen/small_100"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/small_25">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/large_225"
                            android:src="@drawable/voucher_gojek"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/normal_75"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/gojek"
                                android:textSize="@dimen/caption"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/colorPrimaryDarkPro" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/free_10x_go_ride"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/subtitle_2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/small_25">

                                <ImageView
                                    android:layout_width="@dimen/normal_125"
                                    android:layout_height="@dimen/normal_125"
                                    android:src="@drawable/coin_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:text="@string/_5000"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/text_orange"
