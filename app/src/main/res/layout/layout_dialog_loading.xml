<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_rounded_white_max"
        android:paddingHorizontal="@dimen/normal_125"
        android:paddingVertical="@dimen/normal_125"
        android:layout_marginHorizontal="@dimen/normal_150">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_75_custom"
            android:src="@drawable/icon_loading"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/h6"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="@dimen/normal_100"/>

    </LinearLayout>

</RelativeLayout>