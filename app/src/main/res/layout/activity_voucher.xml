                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/large_225"
                            android:src="@drawable/voucher_tix"
                            android:scaleType="centerCrop" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/normal_75"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/tix_id"
                                android:textSize="@dimen/caption"
                                android:fontFamily="@font/poppins"
                                android:textColor="@color/colorPrimaryDarkPro" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:text="@string/free_2_ticket"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/subtitle_2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/small_25">

                                <ImageView
                                    android:layout_width="@dimen/normal_125"
                                    android:layout_height="@dimen/normal_125"
                                    android:src="@drawable/coin_icon" />

                                <TextView
                                    android:layout_width="match_parent"
